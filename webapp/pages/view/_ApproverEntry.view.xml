<mvc:View
	controllerName="zwfuol.pages.controller.ApproverEntry"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<l:VerticalLayout class="sapUiContentPadding">
		<t:Table
			id="approvertbl"
			rows="{
				path: '/ApproverGroupSet',
				sorter: {
					path: 'Groupid'
				}
			}"
			selectionMode="MultiToggle"
			visibleRowCount="18"
			paste="onPaste"
			ariaLabelledBy="title"
			rowSelectionChange="onTableSelectionChanged"
		>
			<t:extension>
				<OverflowToolbar style="Clear">
					<Title
						id="title"
						text="{i18n>Label.RegisterApprover}"
					/>
					<ToolbarSpacer />					
					<Button
						icon="sap-icon://save"
						textDirection="Inherit"
						type="Default"
						press="onSave"
						visible="{viewData>/showSave}"
					/>
					<Button
						icon="sap-icon://delete"
						textDirection="Inherit"
						type="Default"
						press="onDelete"
						visible="{viewData>/showDelete}"
					/>
					<Button
						icon="sap-icon://add"
						textDirection="Inherit"
						type="Default"
						press="onAdd"
					/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column
					width="12rem"
					filterProperty="Groupid"
				>
					<Label text="{i18n>Label.GroupID}" />
					<t:template>						
						<Input
							placeholder="{i18n>Select.ApproverGroup}"
							showSuggestion="true"
							suggestionItems="{/ApprGroupSet}"
							value="{Groupid}"
						>
							<suggestionItems>
								<c:ListItem
									text="{Groupid}"
									additionalText="{Groupname}"
								/>
							</suggestionItems>
						</Input>
					</t:template>
				</t:Column>
				<t:Column
					width="10rem"
					filterProperty="Useragent"
				>
					<Label text="{i18n>Label.UserID}" />
					<t:template>
						<!-- <Input
							value="{
								path: 'Useragent'
							}"
							maxLength="12"
						/> -->

						<Input
							textFormatMode="ValueKey"
							placeholder="{i18n>Select.UserID}"
							showSuggestion="true"
							showTableSuggestionValueHelp="false"
							suggestionRows="{/UserVHSet}"
							value="{Useragent}"
							change="onChanged"
						>
							<suggestionColumns>
								<Column
									popinDisplay="Inline"
									demandPopin="true"
								>
									<Label text="{i18n>Label.UserID}" />
								</Column>
								<Column
									hAlign="Center"
									popinDisplay="Inline"
									demandPopin="true"
									minScreenWidth="Tablet"
								>
									<Label text="{i18n>Label.FirstName}" />
								</Column>
								<Column
									hAlign="Center"
									popinDisplay="Inline"
									minScreenWidth="Tablet"
								>
									<Label text="{i18n>Label.LastName}" />
								</Column>
								<Column
									hAlign="Center"
									popinDisplay="Inline"
									demandPopin="true"
								>
									<Label text="{i18n>Label.Property}" />
								</Column>
								<Column
									hAlign="Center"
									popinDisplay="Inline"
									demandPopin="true"
								>
									<Label text="{i18n>Label.Department}" />
								</Column>
							</suggestionColumns>
							<suggestionRows>
								<ColumnListItem>
									<Label text="{Bname}" />
									<Label text="{Fistname}" />
									<Label text="{Lastname}" />
									<Label text="{Function}" />
									<Label text="{Department}" />
								</ColumnListItem>
							</suggestionRows>
						</Input>				
					</t:template>
				</t:Column>
				<t:Column width="10rem">
					<Label text="{i18n>Label.ValidFrom}" />
					<t:template>
						<DatePicker value="{
							path: 'Validfrom',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'yyyy-MM-dd'
							}
						}" />
					</t:template>
				</t:Column>
				<t:Column
					width="10rem"					
				>
					<Label text="{i18n>Label.ValidTo}" />
					<t:template>
						<DatePicker value="{
							path: 'Validto',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'yyyy-MM-dd'
							}
						}" />
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
	</l:VerticalLayout>
</mvc:View>