<mvc:View
	controllerName="zwfuol.pages.controller.InitiatorGroup"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:plugins="sap.ui.table.plugins"
	xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"	
>
	<Page>
		<l:VerticalLayout class="sapUiContentPadding">
			<f:Form
				id="FormChange354"
				editable="true"
			>
				<f:toolbar>
					<Toolbar>
						<Title text="{i18n>New.InitiatorGroup}" />
						<ToolbarSpacer />
						<Button
							icon="sap-icon://cancel"
							press="onClear"
						/>
						<Button
							icon="sap-icon://add"
							press="onAdd"
						/>
					</Toolbar>
				</f:toolbar>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"
					/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>Label.GroupID}">
								<f:fields>
									<HBox>
										<Label text="IG" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
										<Input
											value="{form>/Groupid}"
											id="name"
											maxLength="14"
											valueState="{form>/Status/Groupid}"
											valueStateText="{form>/StatusTxt/Groupid}"
											width="10rem"
										/>
									</HBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>Label.GroupName}">
								<f:fields>
									<Input
										value="{form>/Groupname}"
										maxLength="40"
										valueState="{form>/Status/Groupname}"
										valueStateText="{form>/StatusTxt/Groupname}"
										width="20rem"
									/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
			<t:Table
				id="initiatortbl"
				rows="{
					path: '/InitGroupSet',
					sorter: {
						path: 'Groupid'
					}
				}"
				visibleRowCount="16"
				paste="onPaste"
				ariaLabelledBy="title"
				rowSelectionChange="onTableSelectionChanged"
			>
				<t:dependents>
					<plugins:MultiSelectionPlugin
						enableNotification="true"
						showHeaderSelector="true"
						selectionMode="MultiToggle"
						selectionChange="onSelectionChange"
					/>
				</t:dependents>
				<t:extension>
					<OverflowToolbar style="Clear">
						<Title
							id="title"
							text="{i18n>Label.InitiatorGroup}"
						/>
						<ToolbarSpacer />
						<Button
							icon="sap-icon://save"
							textDirection="Inherit"
							type="Default"
							press="onSave"
							visible="{viewData>/showSave}"
						/>
						<Button
							icon="sap-icon://delete"
							textDirection="Inherit"
							type="Default"
							press="onDelete"
							visible="{viewData>/showDelete}"
						/>
					</OverflowToolbar>
				</t:extension>
				<t:columns>
					<t:Column
						width="10rem"
						filterProperty="Groupid"
					>
						<Label text="{i18n>Label.GroupID}" />
						<t:template>
							<Label
								text="{Groupid}"
								wrapping="false"
							/>
						</t:template>
					</t:Column>
					<t:Column
						width="20rem"
						filterProperty="Groupname"
					>
						<Label text="{i18n>Label.GroupName}" />
						<t:template>
							<Input
								value="{
									path: 'Groupname'
								}"
								maxLength="40"
								change="onChange"
							/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</l:VerticalLayout>
		<footer>
			<Toolbar id="footer">
				<Button
					id="messagePopoverBtn"
					icon="sap-icon://alert"
					text="{= ${message>/}.length }"
					visible="{= ${message>/}.length > 0 }"
					type="Emphasized"
					press="onMessagePopoverPress"
				/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>