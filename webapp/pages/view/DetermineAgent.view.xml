<mvc:View
	controllerName="zwfuol.pages.controller.DetermineAgent"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:plugins="sap.ui.table.plugins"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Page showHeader="false">
		<l:VerticalLayout class="sapUiContentPadding">
			<f:Form editable="false">
				<f:toolbar>
					<Toolbar>
						<Title text="{i18n>Select.Workflow}"/>
					</Toolbar>
				</f:toolbar>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"
					/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>Label.Workflow}">
								<f:fields>
									<Select
										forceSelection="false"
										selectedKey="{viewData>/WfGuid}"
										selectedItemId="{viewData>/WfName}"
										items="{
											path: '/ZWFRegisterSet',
											sorter: {
												path: 'WfName'
											},
											templateShareable: true
										}"
										change="onWFSelect"
									>
										<c:Item
											key="{WfGuid}"
											text="{WfName}"
										/>
									</Select>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
			<t:Table
				id="detagenttbl"
				rows="{
					path: '/DetermineAgentSet',
					filters: {
						path: 'WfGuid',
						operator: 'EQ',
						value1: ''
					}
				}"
				visibleRowCount="18"
				ariaLabelledBy="title"
			>
				<t:dependents>
					<plugins:MultiSelectionPlugin
						enableNotification="true"
						showHeaderSelector="true"
						selectionMode="MultiToggle"
						selectionChange="onSelectionChange"
					/>
				</t:dependents>
				<t:extension>
					<OverflowToolbar style="Clear">
						<Title
							id="title"
							text="{i18n>Label.DetermineAgent}"
						/>
						<ToolbarSpacer/>
						<Button
							icon="sap-icon://save"
							textDirection="Inherit"
							type="Default"
							press="onSave"
							visible="{viewData>/showSave}"
						/>
						<Button
							icon="sap-icon://delete"
							textDirection="Inherit"
							type="Default"
							press="onDelete"
							visible="{viewData>/showDelete}"
						/>
						<Button
							icon="sap-icon://add"
							textDirection="Inherit"
							type="Default"
							press="onAdd"
						/>
					</OverflowToolbar>
				</t:extension>
				<t:columns>				
					<t:Column
						width="16rem"
						filterProperty="Initiatorgrp"
					>
						<Label text="{i18n>Label.InitiatorGroup}"/>
						<t:template>
							<Select
								forceSelection="false"
								selectedKey="{Initiatorgrp}"
								items="{
									path: '/InitGroupSet',
									sorter: {
										path: 'Groupid'
									},
									templateShareable: true
								}"
								change="onChanged"
							>
								<c:Item
									key="{Groupid}"
									text="{Groupname}"
								/>
							</Select>
						</t:template>
					</t:Column>	
					<t:Column width="10rem">
						<Label text="{i18n>Label.ValidFrom}"/>
						<t:template>
							<DatePicker value="{
								path: 'Validfrom',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'yyyy-MM-dd'
								}
							}"
							change="onChanged"
							/>
						</t:template>
					</t:Column>
					<t:Column width="10rem">
						<Label text="{i18n>Label.ValidTo}"/>
						<t:template>
							<DatePicker value="{
								path: 'Validto',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'yyyy-MM-dd'
								}
							}"
							change="onChanged"
							/>
						</t:template>
					</t:Column>
					
					<t:Column
						width="12rem"
						filterProperty="L1approvergrp"
					>
						<Label text="{i18n>Label.L1ApproverGroup}"/>
						<t:template>
							<Select
								forceSelection="false"
								selectedKey="{L1approvergrp}"
								items="{
									path: '/ApprGroupSet',
									sorter: {
										path: 'Groupid'
									},
									templateShareable: true
								}"
								change="onChanged"
							>
								<c:Item
									key="{Groupid}"
									text="{Groupname}"
								/>
							</Select>
						</t:template>
					</t:Column>
					<t:Column
						width="12rem"
						filterProperty="L2approvergrp"
					>
						<Label text="{i18n>Label.L2ApproverGroup}"/>
						<t:template>
							<Select
								forceSelection="false"
								selectedKey="{L2approvergrp}"
								items="{
									path: '/ApprGroupSet',
									sorter: {
										path: 'Groupid'
									},
									templateShareable: true
								}"
								change="onChanged"
							>
								<c:Item
									key="{Groupid}"
									text="{Groupname}"
								/>
							</Select>
						</t:template>
					</t:Column>
					<t:Column
						width="12rem"
						filterProperty="L3approvergrp"
					>
						<Label text="{i18n>Label.L3ApproverGroup}"/>
						<t:template>
							<Select
								forceSelection="false"
								selectedKey="{L3approvergrp}"
								items="{
									path: '/ApprGroupSet',
									sorter: {
										path: 'Groupid'
									},
									templateShareable: true
								}"
								change="onChanged"
							>
								<c:Item
									key="{Groupid}"
									text="{Groupname}"
								/>
							</Select>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</l:VerticalLayout>
		<footer>
			<Toolbar id="footer">
				<Button
					id="messagePopoverBtn"
					icon="sap-icon://alert"
					text="{= ${message>/}.length }"
					visible="{= ${message>/}.length > 0 }"
					type="Emphasized"
					press="onMessagePopoverPress"
				/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>